[user]
    # No email because it depends on where I work :D
    name = St√©phane Trebel
[pull]
    rebase = true
[push]
    default = simple
    followTags = true
[alias]
    prune = fetch --prune
    undo = reset --soft HEAD^
    stash-all = stash save --include-untracked
    glog = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset'
[merge]
    ff = only
    conflictstyle = diff3
[status]
    showUntrackedFiles = all
[transfer]
    fsckobjects = true
